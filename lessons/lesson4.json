          "dholuo": "Wach onge.",
          "literal": "",
          "english": "There is no news."
        },
        {
            "speaker": "Akinyi",
            "speaker_type": "B", 
            "dholuo": "Aya, oriti iwuoth maber.",
            "literal": "",
            "english": "Okay, goodbye, go well.."
          },
          {
            "speaker": "Yambo",
            "speaker_type": "A", 
            "dholuo": "Oriti ahinya",
            "literal": "",
            "english": "Goodbye."
          }
      ]
    }
