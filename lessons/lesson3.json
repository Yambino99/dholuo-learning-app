                "dholuo": "Eeh, otedo maber.",
                "literal": "Yes + he cooked + well.",
                "english": "Yes, he cooked well."
              },
            {
              "speaker": "Yambo", 
              "speaker_type": "A",
              "dholuo": "To nyathi matin?",
              "literal": "And + baby + small?",
              "english": "And the small baby?"
            },
            {
              "speaker": "Akinyi",
              "speaker_type": "B", 
              "dholuo": "Matin ni ka",
              "literal": "Small + is + here ",
              "english": "The small baby is here."
            },
            {
              "speaker": "Yambo",
              "speaker_type": "A",
              "dholuo": "Osechiemo?",
              "literal": "Has he already eaten?",
              "english": "Has he already eaten?"
            },
            {
                "speaker": "Akinyi",
                "speaker_type": "B", 
                "dholuo": "Eeh. Ochiemo mang'eny.",
                "literal": "Yes + he ate + a lot",
                "english": "Yes. He ate a lot."
              }
          ]
